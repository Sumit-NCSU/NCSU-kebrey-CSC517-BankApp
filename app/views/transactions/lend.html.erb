<h1>Transfer to another account <br><small> friend account or other personal account</small></h1>
<hr>
<% if !notice.nil? %>
    <hr>
    <h3 id="notice"><%= notice %></h3>
    <hr>
<% end %>
<div class="container">
  <%= form_for @transaction, :url => { :action => :create_lend} do |f| %>
      <% if @transaction.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this account from being saved:</h2>

            <ul>
              <% @transaction.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="field">
        <%= f.label :txn_type, :value => 'Transaction Type'%>&nbsp;&nbsp;&nbsp;&nbsp;
        <%=Transaction::TYPES[2] %> <br />
      </div>
      <hr>
      <div class="field">
        <b>Select an account to send from: </b>&nbsp;&nbsp;&nbsp;&nbsp;
        <!-- Display list of all accounts for this username -->
        <% if @my_accounts %>
            <%= f.collection_select :from_account_id, @my_accounts, :id , :id %>
        <% else %>
            N/A
        <% end %>
      </div>
      <hr>
      <div class="field">
        <b>Select an account to send to: </b>&nbsp;&nbsp;&nbsp;&nbsp;
        <!-- Display list of friends account ids for form_account_id-->
        <% if @friends_accounts %>
            <%= f.collection_select :to_account_id, @friends_accounts + @my_accounts , :id , :id %>
                  <!--can check if the same account is selected for to and from -->
        <% else %>
            N/A
        <% end %>
      </div>

      <hr>
      <div class="field">
        <%= f.label :amount %>&nbsp;&nbsp;&nbsp;&nbsp;
        <%= f.text_field :amount %>
      </div>
      <hr>
      <div class="actions">
        <%= f.submit :value =>  'Transfer Request', :class => 'btn btn-success btn-lg' %>
      </div>

  <% end %>
</div>
<br>
<%= link_to image_tag('back_icon.png', size:'65x65', alt:'Back to Home'), home_path %>